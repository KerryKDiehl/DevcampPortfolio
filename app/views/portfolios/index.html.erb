<h1>Portfolio Items</h1>

<%= link_to "Create New Portfolio", new_portfolio_path %>

<% @portfolio_items.each do |portfolio| %>
  <p><%= link_to portfolio.title, portfolio_path(portfolio) %></p>
  <p><%= portfolio.subtitle %></p>
  <p><%= portfolio.body %></p>
  <%= image_tag portfolio.thumb_image if portfolio.thumb_image %>
  <%= link_to "Edit #{portfolio.title}", edit_portfolio_path(portfolio) %>
<% end %>
